<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.syy.springboot.mapper.AuthorityRolePermissionMapper">
    <resultMap id="BaseResultMap" type="com.syy.springboot.model.AuthorityRolePermission">
        <id column="role_id" jdbcType="INTEGER" property="roleId"/>
        <id column="permission_id" jdbcType="INTEGER" property="permissionId"/>
    </resultMap>
    <delete id="deleteByPrimaryKey" parameterType="com.syy.springboot.model.AuthorityRolePermission">
    delete from authority_role_menu
    where role_id = #{roleId,jdbcType=INTEGER}
      and permission_id = #{permissionId,jdbcType=INTEGER}
  </delete>
    <delete id="deleteByRole">
        delete from authority_role_menu
    where role_id = #{roleId}
    </delete>
    <insert id="insertSelective">
        insert into authority_role_menu
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roleId != null">
                role_id,
            </if>
            <if test="permissionId != null">
                permission_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roleId != null">
                #{roleId,jdbcType=INTEGER},
            </if>
            <if test="permissionId != null">
                #{permissionId,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <insert id="insertRolePermission">
        insert into authority_role_menu (role_id,permission_id) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.roleId},
            #{item.permissionId})
        </foreach>
    </insert>
</mapper>